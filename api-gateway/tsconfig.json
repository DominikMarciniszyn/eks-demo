{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "checkJs": false,
    "allowJs": true,
    "target": "es2020",
    "lib": [
        "es2020"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/*", "node_modules"]
}
